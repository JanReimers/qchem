{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-15 build active file",
            "command": "/usr/bin/g++-15",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20",
                "-fmodules-ts",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "`pkg-config","--cflags","gtkmm-4.0`"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}