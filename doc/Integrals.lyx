\begin_layout Standard
\begin_inset Formula 
\begin{equation}
S_{n}(\alpha)=\int dr\:r^{n}e^{-\alpha r}=\frac{n!}{\alpha^{n+1}}\label{eq:Snalphas}
\end{equation}

\end_inset


\begin_inset Formula 
\[
\left\{ S_{0}(\alpha),S_{1}(\alpha),S_{2}(\alpha),S_{3}(\alpha),\ldots\right\} =\left\{ \frac{1}{\alpha},\frac{1}{\alpha^{2}},\frac{2}{\alpha^{3}},\frac{6}{\alpha^{4}},\ldots\right\} 
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
G_{n}\left(\alpha\right)=\intop_{0}^{\infty}r^{n}e^{-\alpha r^{2}}dr\label{eq:Gnalpha}
\end{equation}

\end_inset


\begin_inset Formula 
\[
\left\{ G_{0}(\alpha),G_{2}(\alpha),G_{4}(\alpha),\ldots\right\} =\sqrt{\frac{\pi}{\alpha}}\left\{ \frac{1}{2},\frac{1}{4a},\frac{3}{8a^{2}}\ldots\right\} 
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left\{ G_{1}(\alpha),G_{3}(\alpha),G_{5}(\alpha),\ldots\right\} =\left\{ \frac{1}{2\alpha},\frac{1}{\alpha^{2}},\frac{2}{\alpha^{3}}\right\} 
\]

\end_inset


\begin_inset Formula 
\[
\intop_{0}^{\infty}r^{2n}e^{-\alpha r^{2}}dr=\sqrt{\pi}\frac{\left(2n\right)!}{n!}\left(\frac{1}{2\sqrt{\alpha}}\right)^{2n+1}
\]

\end_inset


\end_layout

